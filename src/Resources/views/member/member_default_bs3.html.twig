<!-- indexer::stop -->
<div class="{{ class|default }} block"{{ cssID|default }}{{ style|default ? ' class="' ~ style ~ '"' }}>

    {% if headline|default %}
        <{{ hl|default('h1') }}>{{ headline }}</{{ hl|default('h1') }}>
    {% endif %}

    {% if message|default %}
        <div class="alert alert-warning" role="alert">{{ message }}</div>
    {% endif %}

    <form{{ action|default ? ' action="' ~ action ~ '"' }} id="{{ formId|default }}" method="post" enctype="{{ enctype|default }}">
        <div class="formbody">
            <input type="hidden" name="FORM_SUBMIT" value="{{ formId|default }}">
            <input type="hidden" name="REQUEST_TOKEN" value="{{ '{{request_token}}' }}">
            <div class="fields">
                {{ fields|default|raw }}
            </div>
            {% block submit %}
            <div class="widget widget-submit">
                <button type="submit" class="submit btn btn-default">{{ slabel|default }}</button>
            </div>
            {% endblock %}
        </div>
    </form>

</div>
<!-- indexer::continue -->