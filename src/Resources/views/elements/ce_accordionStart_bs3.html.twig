{% if accordion_first|default %}
<div class="panel-group" id="accordion_{{ accordion_parentId }}">
    {% endif %}

    <div class="panel panel-default {{ class }} ce_accordion block"{{ cssID }}{% if style|default %} style="{{ style }}"{% endif %}>
        <div class="panel-heading" id="heading_{{ id }}">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#accordion_{{ accordion_parentId }}" href="#collapse_{{ id }}" {% if accordion_first|default %} aria-expanded="true"{% endif %} aria-controls="collapse_{{ id }}">
                    {{ headline }}
                </a>
            </h4>
        </div>

        <div id="collapse_{{ id }}" class="panel-collapse collapse{% if accordion_first|default %} in{% endif %}"
             aria-labelledby="heading_{{ id }}" role="tabpanel">
